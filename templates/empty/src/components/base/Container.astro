---
export interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  class?: string;
}

const {
  size = 'lg',
  class: className = '',
} = Astro.props;

const baseClasses = 'mx-auto px-4 sm:px-6 lg:px-8';

const sizeClasses = {
  sm: 'max-w-3xl',
  md: 'max-w-4xl',
  lg: 'max-w-6xl',
  xl: 'max-w-7xl',
  full: 'max-w-full',
};

const classes = [
  baseClasses,
  sizeClasses[size],
  className,
].filter(Boolean).join(' ');
---

<div class={classes}>
  <slot />
</div>
