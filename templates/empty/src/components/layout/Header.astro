---
import Logo from "../base/Logo.astro";
import LangSwitcher from "../widgets/LangSwitcher.astro";
import ToggleTheme from "../widgets/ToggleTheme.astro";
import { getI18n } from "@utils/i18n";

const { lang } = getI18n(Astro.params.lang);
---

<header
  class="sticky top-0 z-40 w-full border-b border-gray-200 bg-white/95 shadow-sm backdrop-blur-md dark:border-gray-700 dark:bg-gray-900/95"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center">
        <Logo />
      </div>

      <nav class="hidden items-center space-x-8 md:flex">
        <a
          href={`/${lang}`}
          class="text-gray-700 transition-colors hover:text-blue-600 dark:text-gray-300 dark:hover:text-blue-400"
        >
          Home
        </a>
        <a
          href={`/${lang}/about`}
          class="text-gray-700 transition-colors hover:text-blue-600 dark:text-gray-300 dark:hover:text-blue-400"
        >
          About
        </a>
        <a
          href={`/${lang}/contact`}
          class="text-gray-700 transition-colors hover:text-blue-600 dark:text-gray-300 dark:hover:text-blue-400"
        >
          Contact
        </a>
      </nav>

      <div class="flex items-center space-x-4">
        <ToggleTheme />
        <LangSwitcher />
        <button
          class="p-2 text-gray-700 hover:text-blue-600 md:hidden dark:text-gray-300 dark:hover:text-blue-400"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>
