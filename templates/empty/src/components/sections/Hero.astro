---
import Button from "../base/Button.astro";
import Container from "../base/Container.astro";

export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  image?: string;
  class?: string;
}

const {
  title,
  subtitle = '',
  ctaText = 'Get Started',
  ctaLink = '#',
  image = '',
  class: className = '',
} = Astro.props;
---

<section class={`py-16 md:py-24 bg-white dark:bg-gray-900 ${className}`}>
  <Container>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white leading-tight">
          {title}
        </h1>
        {subtitle && (
          <p class="mt-6 text-xl text-gray-600 dark:text-gray-300">
            {subtitle}
          </p>
        )}
        <div class="mt-8 flex flex-col sm:flex-row gap-4">
          <Button href={ctaLink} size="lg">
            {ctaText}
          </Button>
          <Button variant="outline" size="lg">
            Learn More
          </Button>
        </div>
      </div>
      
      {image && (
        <div class="relative">
          <img 
            src={image} 
            alt={title} 
            class="w-full h-auto rounded-lg shadow-lg"
          />
        </div>
      )}
    </div>
  </Container>
</section>
