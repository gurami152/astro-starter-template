---
import Hero from "./Hero.astro";
import Container from "../base/Container.astro";
import Card from "../base/Card.astro";
import Button from "../base/Button.astro";
import { getI18n } from "@utils/i18n";

const { lang, t } = getI18n(Astro.params.lang);
---

<Hero 
  title={t.hero.title}
  subtitle={t.hero.subtitle}
  ctaText={t.hero.cta}
  ctaLink={`/${lang}/docs`}
/>

<Container class="py-16">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {t.features.map((feature) => (
      <Card hover={true}>
        <div class="flex items-center mb-4">
          <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mr-4">
            <span class="text-2xl">{feature.icon}</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
            {feature.title}
          </h3>
        </div>
        <p class="text-gray-600 dark:text-gray-300">
          {feature.description}
        </p>
      </Card>
    ))}
  </div>
</Container>

<section class="bg-gray-50 dark:bg-gray-800 py-16 border-t border-gray-200 dark:border-gray-700">
  <Container>
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {t.cta.title}
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        {t.cta.description}
      </p>
    </div>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <Button size="lg" href={`/${lang}/docs/getting-started`}>
        {t.cta.primary}
      </Button>
      <Button variant="outline" size="lg" href="https://github.com">
        {t.cta.secondary}
      </Button>
    </div>
  </Container>
</section>
