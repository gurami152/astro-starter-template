---
import LandingLayout from "@/layouts/content/LandingLayout.astro";
import Welcome from "@/components/sections/Welcome.astro";
import { getI18n, LANGUAGES } from "@utils/i18n";

export async function getStaticPaths() {
  return LANGUAGES.map((lang) => ({ params: { lang } }));
}

const { lang, t } = getI18n(Astro.params.lang);
---

<LandingLayout title={t.pageTitle}>
  <Welcome />

  <section
    class="border-t border-gray-200 bg-white dark:border-gray-700 dark:bg-gray-800"
  >
    <div class="mx-auto max-w-screen-md px-4 py-8 text-center lg:py-16">
      <h2
        class="mb-4 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        {t.usage.title}
      </h2>
      <p class="mb-6 text-gray-500 dark:text-gray-400">{t.usage.description}</p>
      <div class="relative mx-auto max-w-lg">
        <code
          id="npm-command"
          class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-4 text-base text-gray-900 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400"
        >
          npm create astro-template-znu@latest
        </code>
        <button
          id="copy-button"
          class="absolute end-2.5 bottom-2.5 rounded-lg bg-blue-700 px-4 py-2 text-sm font-medium text-white hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 focus:outline-none dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          >{t.usage.copy}</button
        >
      </div>
    </div>
  </section>

  <section
    class="border-t border-gray-200 bg-gray-50 dark:border-gray-700 dark:bg-gray-800"
  >
    <div class="mx-auto max-w-screen-xl px-4 py-8 lg:py-16">
      <h2
        class="mb-8 text-center text-3xl leading-tight font-extrabold tracking-tight text-gray-900 lg:mb-16 dark:text-white"
      >
        Key Features
      </h2>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        {
          t.features.map((feature) => (
            <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-md dark:border-gray-600 dark:bg-gray-700">
              <div class="mb-4 flex items-center">
                <div class="mr-4 flex h-12 w-12 items-center justify-center rounded-lg bg-blue-100 dark:bg-blue-900">
                  <span class="text-2xl">{feature.icon}</span>
                </div>
                <h3 class="text-xl font-bold dark:text-white">
                  {feature.title}
                </h3>
              </div>
              <p class="text-gray-500 dark:text-gray-400">
                {feature.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section
    class="border-t border-gray-200 bg-white dark:border-gray-700 dark:bg-gray-900"
  >
    <div class="mx-auto max-w-screen-xl px-4 py-8 lg:py-16">
      <h2
        class="mb-8 text-center text-3xl leading-tight font-extrabold tracking-tight text-gray-900 lg:mb-12 dark:text-white"
      >
        {t.demo.title}
      </h2>
      <div
        class="mx-auto max-w-4xl rounded-lg border border-gray-200 bg-white p-6 shadow-md dark:border-gray-600 dark:bg-gray-700"
      >
        <p class="mb-4 text-gray-500 dark:text-gray-400">
          {t.demo.description}
        </p>
        <div class="mb-4 flex flex-wrap gap-4">
          <button
            id="fetch-posts"
            type="button"
            class="rounded-lg bg-blue-700 px-5 py-2.5 text-sm font-medium text-white hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 focus:outline-none dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          >
            {t.demo.button_posts}
          </button>
          <button
            id="fetch-products"
            type="button"
            class="rounded-lg bg-purple-700 px-5 py-2.5 text-sm font-medium text-white hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 focus:outline-none dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-800"
          >
            {t.demo.button_products}
          </button>
        </div>
        <pre
          id="api-result"
          class="overflow-x-auto rounded-lg bg-gray-100 p-4 text-sm text-gray-800 dark:bg-gray-800 dark:text-gray-300">{t.demo.result_placeholder}</pre>
        <div
          id="cache-status"
          class="mt-2 text-sm font-medium text-gray-600 dark:text-gray-300"
        >
        </div>
      </div>
    </div>
  </section>
</LandingLayout>
